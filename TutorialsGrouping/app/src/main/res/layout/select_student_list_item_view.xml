<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/select_student_custum_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/selct_Student_custum_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_student_custum_checkbox"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/select_student_custum_checkbox"
        android:text="Display Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/select_student_custum_uob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/selct_Student_custum_name"
        android:layout_below="@+id/selct_Student_custum_name"
        android:layout_marginTop="6dp"
        android:text="UOB"
        android:textSize="18sp" />
</RelativeLayout>