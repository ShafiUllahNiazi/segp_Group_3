<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_display_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="19dp"
        android:inputType="text"
        android:text="Group Name"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_display_instructor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_display_group_name"
        android:layout_below="@+id/main_display_group_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:text="Instructor Name"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_display_nbr_of_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_display_group_name"
        android:layout_marginEnd="27dp"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
</RelativeLayout>